<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="kafkaConnections" type="Framework.Messaging.Kafka.Configuration.KafkaConnectionConfigurationSection, Framework.Messaging.Kafka, Culture=neutral"/>
  </configSections>
  <system.web>
    <compilation debug="true" targetFramework="4.7.2"/>
    <httpRuntime targetFramework="4.7.2"/>
  </system.web>

  <kafkaConnections>
    <coreConfiguration
      publishClientId="SerivceMonitoring"
      consumeGroupId="SerivceMonitoring"
      bootstrapServers="localhost:9092"
      sslEnabled="false"
      sslCaLocation=""
      sslCertificateLocation=""
      sslCertificatePrivateKeyLocation=""/>
    <consumeConnections>
      <connection
        connectionEnabled="true"
        connectionName="SerivceMonitoringConsume"
        topic="Application-monitoring-json"
        debugMessagesEnabled="false"
        partitionCount="1"
        retryCount="5"/>
    </consumeConnections>
    <publishConnections>
      <connection
        connectionEnabled="true"
        connectionName="ServiceMonitoringPublishLogs"
        topic="Application-monitoring-json"
        debugMessagesEnabled="false"
        retryCount="5"
        partitionCount="1"
        singlePartitionPublishPolicyEnabled="true"/>
    </publishConnections>
  </kafkaConnections>

	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30AD4FE6B2A6AEED" culture="neutral"/>
				<bindingRedirect oldVersion="0.0.0.0-12.0.0.0" newVersion="12.0.0.0"/>
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.Web.Http" publicKeyToken="31BF3856AD364E35" culture="neutral"/>
				<bindingRedirect oldVersion="0.0.0.0-5.2.7.0" newVersion="5.2.7.0"/>
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.Net.Http.Formatting" publicKeyToken="31BF3856AD364E35" culture="neutral"/>
				<bindingRedirect oldVersion="0.0.0.0-5.2.7.0" newVersion="5.2.7.0"/>
			</dependentAssembly>
		</assemblyBinding>
	</runtime>
  <system.codedom>
    <compilers>
      <compiler language="c#;cs;csharp" extension=".cs" type="Microsoft.CodeDom.Providers.DotNetCompilerPlatform.CSharpCodeProvider, Microsoft.CodeDom.Providers.DotNetCompilerPlatform, Version=2.0.1.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" warningLevel="4" compilerOptions="/langversion:6 /nowarn:1659;1699;1701"/>
    </compilers>
  </system.codedom>
</configuration>
